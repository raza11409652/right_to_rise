<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activity.Home">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">

                <ImageView
                    android:layout_width="@dimen/size_180"
                    android:layout_height="@dimen/size_180"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo_rtr"></ImageView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_back"
                android:padding="@dimen/padding_8"
                android:text="@string/header_home_text"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/size_12"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">
                <!--                row 1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        app:cardCornerRadius="@dimen/size_8"
                        app:cardElevation="@dimen/size_4"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_80"
                                android:background="@drawable/pink_grad_back">

                                <ImageView
                                    android:layout_width="@dimen/size_52"
                                    android:layout_height="@dimen/size_52"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/rkt_about_us_icon"></ImageView>
                            </RelativeLayout>

                            <TextView
                                style="@style/accent_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_4"
                                android:text="@string/about_us"
                                android:textAlignment="center">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        app:cardCornerRadius="@dimen/size_8"
                        app:cardElevation="@dimen/size_4"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_80"
                                android:background="@drawable/blue_back">

                                <ImageView
                                    android:layout_width="@dimen/size_52"
                                    android:layout_height="@dimen/size_52"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/rkt_training_icon"></ImageView>
                            </RelativeLayout>

                            <TextView
                                style="@style/accent_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_4"
                                android:text="@string/training"
                                android:textAlignment="center">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!--                row 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        app:cardCornerRadius="@dimen/size_8"
                        app:cardElevation="@dimen/size_4"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_80"
                                android:background="@drawable/blue_back">

                                <ImageView
                                    android:layout_width="@dimen/size_52"
                                    android:layout_height="@dimen/size_52"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/rkt_consulting_icon"></ImageView>
                            </RelativeLayout>

                            <TextView
                                style="@style/accent_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_4"
                                android:text="@string/consulting"
                                android:textAlignment="center">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        app:cardCornerRadius="@dimen/size_8"
                        app:cardElevation="@dimen/size_4"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_80"
                                android:background="@drawable/pink_grad_back">

                                <ImageView
                                    android:layout_width="@dimen/size_52"
                                    android:layout_height="@dimen/size_52"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/rkt_posh_icon"></ImageView>
                            </RelativeLayout>

                            <TextView
                                style="@style/accent_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_4"
                                android:text="@string/posh"
                                android:textAlignment="center">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

<!--                row3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        app:cardCornerRadius="@dimen/size_8"
                        app:cardElevation="@dimen/size_4"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_80"
                                android:background="@drawable/pink_grad_back">

                                <ImageView
                                    android:layout_width="@dimen/size_52"
                                    android:layout_height="@dimen/size_52"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/rkt_rkt_icon"></ImageView>
                            </RelativeLayout>

                            <TextView
                                style="@style/accent_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_4"
                                android:text="@string/rkt_foundation"
                                android:textAlignment="center">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        app:cardCornerRadius="@dimen/size_8"
                        app:cardElevation="@dimen/size_4"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_80"
                                android:background="@drawable/blue_back">

                                <ImageView
                                    android:layout_width="@dimen/size_52"
                                    android:layout_height="@dimen/size_52"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/rkt_downloads_icon"></ImageView>
                            </RelativeLayout>

                            <TextView
                                style="@style/accent_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_4"
                                android:text="@string/download"
                                android:textAlignment="center">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
<!--                row 4-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_vidoes"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        app:cardCornerRadius="@dimen/size_8"
                        app:cardElevation="@dimen/size_4"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_80"
                                android:background="@drawable/blue_back">

                                <ImageView
                                    android:layout_width="@dimen/size_52"
                                    android:layout_height="@dimen/size_52"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/rkt_vidoes_icon"></ImageView>
                            </RelativeLayout>

                            <TextView
                                style="@style/accent_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_4"
                                android:text="@string/videos"
                                android:textAlignment="center">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_contact_us"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        app:cardCornerRadius="@dimen/size_8"
                        app:cardElevation="@dimen/size_4"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_80"
                                android:background="@drawable/pink_grad_back">

                                <ImageView
                                    android:layout_width="@dimen/size_52"
                                    android:layout_height="@dimen/size_52"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/rkt_contact_us_icon"></ImageView>
                            </RelativeLayout>

                            <TextView
                                style="@style/accent_title_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_4"
                                android:text="@string/contact_us"
                                android:textAlignment="center">

                            </TextView>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>